<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${project.parent.artifactId}</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*:zip:*</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
    <moduleSets>
      <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.runtimeverification.rvpredict:rv-predict-agent</include>
            </includes>
            <binaries>
                <attachmentClassifier>jar-with-dependencies</attachmentClassifier>
                <outputDirectory>/lib</outputDirectory>
                <outputFileNameMapping>rv-predict.jar</outputFileNameMapping>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <excludes>
                            <exclude>*:*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.runtimeverification.rvpredict:basic</include>
                <include>com.runtimeverification.rvpredict:SpringExample</include>
            </includes>
            <binaries>
                <attachmentClassifier>jar-with-dependencies</attachmentClassifier>
                <outputDirectory>/examples</outputDirectory>
                <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <excludes>
                            <exclude>*:*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <directory>../docs/target/docs/text</directory>
            <outputDirectory>/docs</outputDirectory>
            <excludes>
                <exclude>index.txt</exclude>
                <exclude>.doctrees/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>LICENSE*</include>
                <include>README*</include>
                <include>examples/basic-examples-list.txt</include>
                <include>examples/tests/**</include>
            </includes>
        </fileSet>
         <fileSet>
            <directory>../examples/basic/src</directory>
            <outputDirectory>/examples/basic-src</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../examples/ftpserver</directory>
            <outputDirectory>/examples</outputDirectory>
            <includes>
                <include>ftpserver.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/scripts/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>bin/</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>images/</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>

